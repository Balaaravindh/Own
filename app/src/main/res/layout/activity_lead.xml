<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Activity.LeadActivity">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/login_background">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserratregular"
            android:text="Leads"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/submit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/submit" />

        </RelativeLayout>

    </RelativeLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/actionBar"
       android:scrollbars="none">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_marginTop="5dp">

               <android.support.v7.widget.CardView
                   android:id="@+id/lead_name_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp">

                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="50dp">

                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:hint="Lead Name"
                           android:textSize="14dp"
                           android:maxLength="15"
                           android:background="@color/white"
                           android:textAlignment="center"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/parent_account_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/lead_name_layout">

                   <RelativeLayout
                       android:id="@+id/parent_account"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <TextView
                           android:id="@+id/parent_account_text"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:text="Parent Account"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/ownership_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/parent_account_layout">

                   <RelativeLayout
                       android:id="@+id/ownership"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <TextView
                           android:id="@+id/ownership_text"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:text="Ownership"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/industry_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/ownership_layout">

                   <RelativeLayout
                       android:id="@+id/industry"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <TextView
                           android:id="@+id/industry_text"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:text="Industry"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/nature_of_bussiness_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/industry_layout">

                   <RelativeLayout
                       android:id="@+id/nature_of_bussiness"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <TextView
                           android:id="@+id/nature_of_bussiness_text"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:text="Nature of Business"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/annual_revenue_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/nature_of_bussiness_layout">

                   <RelativeLayout
                       android:id="@+id/annual_revenue"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:hint="Annual Revenue"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:inputType="number"
                           android:textAlignment="center"
                           android:background="@color/white"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/lead_status_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/annual_revenue_layout">

                   <RelativeLayout
                       android:id="@+id/lead_status"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <TextView
                           android:id="@+id/lead_status_text"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:text="Lead Status"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/lead_source_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/lead_status_layout">

                   <RelativeLayout
                       android:id="@+id/lead_source"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <TextView
                           android:id="@+id/lead_source_text"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:text="Lead Source"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/rating_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/lead_source_layout">

                   <RelativeLayout
                       android:id="@+id/rating"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <TextView
                           android:id="@+id/rating_text"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:text="Rating"
                           android:textStyle="bold"
                           android:textSize="14dp"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/prospect_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/rating_layout">

                   <RelativeLayout
                       android:id="@+id/prospect"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <TextView
                           android:id="@+id/prospect_text"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:text="Prospect"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />


                   </RelativeLayout>

               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/details_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="15dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="5dp"
                   android:layout_below="@+id/prospect_layout">

                   <RelativeLayout
                       android:id="@+id/details"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">

                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:hint="Details"
                           android:textSize="14dp"
                           android:textAlignment="center"
                           android:maxLength="150"
                           android:singleLine="true"
                           android:background="@color/white"
                           android:fontFamily="@font/montserratregular"
                           android:layout_centerInParent="true"
                           android:textColor="@color/colorPrimary" />

                   </RelativeLayout>

               </android.support.v7.widget.CardView>

           </RelativeLayout>

       </LinearLayout>

   </ScrollView>

</RelativeLayout>