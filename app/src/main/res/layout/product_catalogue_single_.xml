<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_catalogure_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Product 02 (002)"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_catalogure_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_catalogure_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Category   :"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/product_catalogure_category_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_catalogure_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/product_catalogure_category_text"
                android:fontFamily="@font/montserratregular"
                android:textStyle="bold"
                android:text="Engine Values"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/product_catalogure_supplier_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_catalogure_category_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Supplier    :"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/product_catalogure_supplier_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_catalogure_category_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/product_catalogure_supplier_text"
                android:fontFamily="@font/montserratregular"
                android:text="Sample Supplier"
                android:textStyle="bold"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/prodyct_catalogure_base_cost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_catalogure_supplier_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Base Cost  :"
                android:textSize="14dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/product_catalogure_base_cost_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_catalogure_supplier_text"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/prodyct_catalogure_base_cost_text"
                android:fontFamily="@font/montserratregular"
                android:text="Rs. 500"
                android:textSize="14dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>