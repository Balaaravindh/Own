<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/project_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Project                 :"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/project_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/project_text"
                android:fontFamily="@font/montserratregular"
                android:text="Project Name"
                android:singleLine="true"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/lead_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/project_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Lead / Account  :"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lead_account_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/project_text"
                android:layout_toRightOf="@+id/lead_account_text"
                android:fontFamily="@font/montserratregular"
                android:text="Lead / Account Name"
                android:singleLine="true"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lead_account_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Task                      :"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/lead_account_text"
                android:layout_toRightOf="@+id/task_text"
                android:fontFamily="@font/montserratregular"
                android:text="Task Name"
                android:singleLine="true"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/hour_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Hours                   :"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hour_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/task_text"
                android:layout_toRightOf="@+id/hour_text"
                android:fontFamily="@font/montserratregular"
                android:text="Hours Value"
                android:singleLine="true"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/notes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hour_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:text="Notes                   :"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notes_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/hour_text"
                android:layout_toRightOf="@+id/notes_text"
                android:fontFamily="@font/montserratregular"
                android:layout_marginRight="5dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>