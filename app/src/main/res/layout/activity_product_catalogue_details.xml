<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductCatalogueDetailsActivity">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/login_background">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserratregular"
            android:text="Product Catalogue"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBar">

        <android.support.v7.widget.CardView
            android:id="@+id/lead_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/product_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="Product Code          :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_code_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/product_code"
                    android:fontFamily="@font/montserratregular"
                    android:text="P002"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_code"
                    android:fontFamily="@font/montserratregular"
                    android:text="Product Name        :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_code_value"
                    android:layout_toRightOf="@+id/product_name"
                    android:fontFamily="@font/montserratregular"
                    android:text="Product02"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/product_make"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_name"
                    android:fontFamily="@font/montserratregular"
                    android:text="Product Make          :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_make_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_name_value"
                    android:layout_toRightOf="@+id/product_make"
                    android:fontFamily="@font/montserratregular"
                    android:text="Null"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/product_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_make"
                    android:fontFamily="@font/montserratregular"
                    android:text="Product Category   :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_category_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_make_value"
                    android:layout_toRightOf="@+id/product_category"
                    android:fontFamily="@font/montserratregular"
                    android:text="Engine Valves"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/product_supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_category"
                    android:fontFamily="@font/montserratregular"
                    android:text="Product Supplier    :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_supplier_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_category_value"
                    android:layout_toRightOf="@+id/product_supplier"
                    android:fontFamily="@font/montserratregular"
                    android:text="Sample"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/product_country_of_orgin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_supplier"
                    android:fontFamily="@font/montserratregular"
                    android:text="Country Of Orgin    :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_country_of_orgin_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_supplier_value"
                    android:layout_toRightOf="@+id/product_country_of_orgin"
                    android:fontFamily="@font/montserratregular"
                    android:text="Chennai"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/product_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_country_of_orgin"
                    android:fontFamily="@font/montserratregular"
                    android:text="Proc cost                   :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_cost_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_country_of_orgin_value"
                    android:layout_toRightOf="@+id/product_cost"
                    android:fontFamily="@font/montserratregular"
                    android:text="420"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/product_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_cost"
                    android:fontFamily="@font/montserratregular"
                    android:text="MRP / RP                   :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_mrp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/product_cost"
                    android:layout_toRightOf="@+id/product_mrp"
                    android:fontFamily="@font/montserratregular"
                    android:text="500"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>